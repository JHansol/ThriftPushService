<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sol.xyz.linears.push_client">

    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:name="sol.xyz.linears.push_client.global.Global"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="sol.xyz.linears.push_client.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="sol.xyz.linears.push_client.InformationActivity"
            android:screenOrientation="portrait"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" > <!--//android:theme="@style/Theme.AppCompat.DayNight.NoActionBar"-->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="sol.xyz.linears.push_client.InformationActivity" />
        </activity>

        <service android:name="sol.xyz.linears.push_client.pushService.PushNotifyService">
        <!--android:enabled="true"
        android:process=":PushService"
        android:exported="false" -->>
        <intent-filter>
            <category android:name="ANDROID.INTENT.CATEGORY.DEFAULT"/>
        </intent-filter>
        </service>
        <service android:exported="false" android:name="sol.xyz.linears.push_client.pushService.FakeService" android:process=":fake" />

        <receiver android:name = "sol.xyz.linears.push_client.receiver.NetworkSensor">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
                <action android:name="android.net.wifi.WIFI_STATE_CHANGED" />
                <action android:name="android.net.conn.BACKGROUND_DATA_SETTING_CHANGED"/>
            </intent-filter>
        </receiver>
    </application>

</manifest>